<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Buttons -->
  <style name="flat_button_style" parent="@android:style/Widget.Holo.Button.Borderless">
    <item name="paddingStart">0dp</item>
    <item name="paddingEnd">0dp</item>
  </style>

  <!-- Base Text styles-->
  <style name="text">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="text_large" parent="text">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
  </style>

  <style name="text_medium" parent="text">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
  </style>

  <style name="text_small" parent="text">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
  </style>

  <style name="text_large_white" parent="text_large">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="text_small_grey" parent="text_small">
    <item name="android:textColor">@color/grey</item>
  </style>

  <!-- Text-widgets styles-->
  <style name="no_data_list_msg" parent="text_large_white">
    <item name="android:gravity">center</item>
  </style>

  <style name="name_field_list_item" parent="text_medium">
    <item name="android:gravity">start</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="crop_field_list_item" parent="text_medium">
    <item name="android:gravity">start</item>
  </style>

  <style name="area_field_list_item" parent="text_small_grey">
    <item name="android:gravity">end</item>
  </style>

</resources>
