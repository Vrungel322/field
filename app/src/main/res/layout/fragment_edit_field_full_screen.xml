<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraint_layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="@color/light_grey"
    >

  <TextView
      android:id="@+id/text_view_edit_mode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:gravity="end|center_vertical"
      android:text="@string/text_edit_mode"
      android:textAlignment="textEnd"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@+id/toggle_button_edit_mode"
      app:layout_constraintRight_toLeftOf="@+id/toggle_button_edit_mode"
      app:layout_constraintTop_toTopOf="@+id/toggle_button_edit_mode"
      style="@style/text_medium"
      />

  <ToggleButton
      android:id="@+id/toggle_button_edit_mode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:textOff="@string/toggle_button_text_off"
      android:textOn="@string/toggle_button_text_on"
      android:visibility="gone"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/it_layout_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toggle_button_edit_mode"
      >

    <EditText
        android:id="@+id/ed_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text_name_hint"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/dark_grey"
        />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/it_layout_area"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/btn_edit_area"
      app:layout_constraintTop_toBottomOf="@+id/it_layout_name"
      >

    <EditText
        android:id="@+id/ed_text_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text_area_hint"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/dark_grey"
        />
  </android.support.design.widget.TextInputLayout>

  <Button
      android:id="@+id/btn_edit_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="@string/button_edit_text"
      android:textColor="@color/dark_grey"
      android:textColorHighlight="@color/colorAccent"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@+id/it_layout_area"
      app:layout_constraintLeft_toRightOf="@+id/it_layout_area"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/it_layout_area"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/it_layout_crop"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/it_layout_area"
      >

    <EditText
        android:id="@+id/ed_text_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text_crop_hint"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/dark_grey"
        />
  </android.support.design.widget.TextInputLayout>

  <Button
      android:id="@+id/btn_ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:gravity="end|center_vertical"
      android:text="@string/dialog_action_ok"
      android:textAlignment="textEnd"
      android:textColor="@color/colorAccent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

  <Button
      android:id="@+id/btn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="@string/dialog_action_cancel"
      android:textAlignment="center"
      android:textColor="@color/colorAccent"
      app:layout_constraintBottom_toBottomOf="@+id/btn_ok"
      app:layout_constraintRight_toLeftOf="@+id/btn_ok"
      app:layout_constraintTop_toTopOf="@+id/btn_ok"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

</android.support.constraint.ConstraintLayout>