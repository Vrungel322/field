<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_view_conditions"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/btn_ok"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/btn_ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:gravity="end|center_vertical"
      android:text="@string/dialog_action_ok"
      android:textAlignment="textEnd"
      android:textColor="@color/buttons_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

  <Button
      android:id="@+id/btn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:text="@string/dialog_action_cancel"
      android:textAlignment="center"
      android:textColor="@color/buttons_color"
      app:layout_constraintBottom_toBottomOf="@+id/btn_ok"
      app:layout_constraintRight_toLeftOf="@+id/btn_ok"
      app:layout_constraintTop_toTopOf="@+id/btn_ok"
      style="@android:style/Widget.Holo.Button.Borderless"
      />


</android.support.constraint.ConstraintLayout>