<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    >

  <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.4"
      />

  <TextView
      android:id="@+id/text_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="(T): примечание к технологическому процессу"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/text_status"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="@string/edit_text_tech_process_status"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_description"
      />

  <Spinner
      android:id="@+id/spinner_tech_process_state"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/text_status"
      />

  <CheckedTextView
      android:id="@+id/checked_text_show_conditions"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:checkMark="@drawable/checked_text_openclose_icon"
      android:checked="true"
      android:gravity="center_vertical"
      android:text="@string/checked_text_technological_process_conditions"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spinner_tech_process_state"
      />

  <android.support.v4.widget.NestedScrollView
      android:id="@+id/scroll_view_conditions"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      app:layout_constraintBottom_toTopOf="@+id/guideline"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/checked_text_show_conditions"
      android:background="@color/white"
      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>
  </android.support.v4.widget.NestedScrollView>

  <android.support.v4.widget.NestedScrollView
      android:id="@+id/scroll_view_solutions"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/common_margin"
      app:layout_constraintBottom_toTopOf="@+id/text_total_amount"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/scroll_view_conditions"
      >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_solutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>
  </android.support.v4.widget.NestedScrollView>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/fab_add_new_solution"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      app:layout_constraintBottom_toBottomOf="@+id/scroll_view_solutions"
      app:layout_constraintRight_toRightOf="parent"
      app:srcCompat="@android:drawable/ic_menu_add"
      />

  <TextView
      android:id="@+id/text_total_amount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="(T): Всего: 22600 грн."
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/btn_ok"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      style="@style/text_large"
      />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/it_done_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginLeft="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginStart="@dimen/common_margin"
      app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/btn_cancel"
      app:layout_constraintTop_toTopOf="@+id/btn_cancel"
      >

    <EditText
        android:id="@+id/ed_text_done_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_text_technological_process_date_hint"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/grey_dark"
        />
  </android.support.design.widget.TextInputLayout>

  <Button
      android:id="@+id/btn_ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:gravity="end|center_vertical"
      android:text="@string/dialog_action_ok"
      android:textAlignment="textEnd"
      android:textColor="@color/buttons_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

  <Button
      android:id="@+id/btn_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/common_margin"
      android:layout_marginEnd="@dimen/common_margin"
      android:layout_marginRight="@dimen/common_margin"
      android:layout_marginTop="@dimen/common_margin"
      android:text="@string/dialog_action_cancel"
      android:textAlignment="center"
      android:textColor="@color/buttons_color"
      app:layout_constraintBottom_toBottomOf="@+id/btn_ok"
      app:layout_constraintRight_toLeftOf="@+id/btn_ok"
      app:layout_constraintTop_toTopOf="@+id/btn_ok"
      style="@android:style/Widget.Holo.Button.Borderless"
      />

</android.support.constraint.ConstraintLayout>